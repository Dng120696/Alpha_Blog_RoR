<h1 style = " ">Articles Listing Page</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th> Action</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td> <%=article.user.username%> </td>
        <td> <%=article.title%> </td>
        <td> <%=article.description%> </td>
        <td> <%= link_to 'Show', article_path(article)%></td>
        <td> <%= link_to 'Edit', edit_article_path(article)%></td>
        <td><%= link_to 'Delete', article_path(article),data: {turbo_confirm: "Are you sure?", turbo_method: :delete }%></td>
      </tr>
    <%end%>
      <% @users.each do |user| %>
      <tr>
        <td> <%=user.articles %> </td>
      
    <%end%>
  </tbody>
</table>
<br/>
<p>
<%= button_to 'Create new Article',new_article_path,method: :get%>
</p>
